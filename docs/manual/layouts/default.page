<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<title>ThingFish :: Manual :: <%= page.title || "untitled" %></title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />

	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript" src="/js/jquery.ThickBox.js"></script>

    <link rel="stylesheet" type="text/css" href="/css/thickbox.css"
 		media="screen,projection" />
    <link rel="stylesheet" type="text/css" href="/css/default.css"
 		media="screen,projection" />
</head>
<body class="manual">

	<div id="header">
		<h1><a href="/">ThingFish</a></h1>
	</div>

	<div id="tagline">This is the best tagline evar.</div>

	<div id="content">
		<div class="left">
			<div class="section">
				<!-- @template_name = <%= template_name %> -->
				<% if template_name == 'index.page' %>
				<h2 class="current">Introduction</h2>
				<% else %>
				<h2><a href="/manual/index.html">Introduction</a></h2>
				<% end %>
			</div>
			<div class="section">
				<% if @template_name == 'getting-started.page' %>
				<h2 class="current">Getting Started</h2>
				<% else %>
				<h2><a href="/manual/getting-started.html">Getting Started</a></h2>
				<% end %>
			</div>
			<% @navsections.each do |sectiontitle, sectionhref, subpages| %>
			<div class="section">
				<% if @template_name.sub(/\.page$/i, '.html') == sectionhref.to_s %>
				<h2 class="current"><%= sectiontitle %></h2>
				<% else %>
				<h2><a href="/manual/<%= sectionhref %>"><%= sectiontitle %></a></h2>
				<% end %>
				<ul>
				<% subpages.each do |pagepath, pagetitle| %>
				<% if pagepath.sub(/\.html$/, '') == @template_name.sub(/\.page$/, '') %>
					<li class="current"><%= pagetitle %></li>
				<% else %>
					<li><a href="/manual/<%= pagepath %>"><%= pagetitle %></a></li>
				<% end %>
				<% end %>
				</ul>
			</div>
			<% end %>
		</div>

		<div class="right">
	        <p class="textright">Version: <%= @version %></p>
		    <%= @content_for_layout %>
		</div>
	</div>
 
	<div id="footer">
		<p>
			<span class="copyright">Copyright &copy; 2007 LAIKA, Inc.</span>
			<span class="svnid">$Id$</span>
		</p>
	</div>
	
</body>
</html>

